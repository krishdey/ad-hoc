package com.jpmorgan.hadoop.hbase.rowrename;

import org.apache.hadoop.hbase.io.ImmutableBytesWritable;
import org.apache.hadoop.hbase.util.Bytes;

public class DefaultHashRowKeyImpl implements RowKeyHashAlgorithm {

	@Override
	public ImmutableBytesWritable hashRowKey(ImmutableBytesWritable key) {
		String haString = MD5Util.calcMD5SaltedTail(Bytes.toString(key.get()));
		return new ImmutableBytesWritable(haString.getBytes());
	}

}
